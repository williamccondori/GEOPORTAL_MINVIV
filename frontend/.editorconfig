root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
indent_size = 2
quote_type = single

[*.js]
indent_size = 2
quote_type = single

[*.json]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = false

[*.html]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.css]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.scss]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.yaml]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
